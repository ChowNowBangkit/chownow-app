<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:backgroundTint="@color/orange_secondary"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ImageView untuk gambar menu -->
        <ImageView
            android:id="@+id/iv_resto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/restaurant_image"
            android:background="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nama Restoran -->
        <TextView
            android:id="@+id/tv_nama_resto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Nama Makanan"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_resto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <!-- Informasi Jarak dan Waktu -->
        <TextView
            android:id="@+id/tv_estimate_reach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rp. 25.000"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/iv_resto" />

        <!-- Tombol Add/Subtract -->
        <Button
            android:id="@+id/btn_add"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_value"
            app:layout_constraintEnd_toStartOf="@+id/tv_add_value"
            app:layout_constraintTop_toTopOf="@+id/tv_add_value" />

        <View
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/circle_light_blue"
            app:layout_constraintTop_toTopOf="@+id/tv_add_value"
            app:layout_constraintStart_toStartOf="@id/btn_add"/>

        <TextView
            android:id="@+id/tv_add_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="2"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_subtract"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_minus"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_value"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/circle_light_blue"
            app:layout_constraintTop_toTopOf="@+id/tv_add_value"
            app:layout_constraintStart_toStartOf="@id/btn_subtract"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
